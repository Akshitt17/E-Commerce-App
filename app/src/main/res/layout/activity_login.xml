<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".loginActivity">

 <ImageView
     android:id="@+id/login_Applogo"
     android:layout_width="300dp"
     android:layout_height="150dp"
     android:layout_marginTop="80dp"
     android:layout_centerHorizontal="true"
     android:src="@drawable/applogo" />

 <EditText
     android:id="@+id/login_phonenumber_input"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/login_Applogo"
     android:layout_marginTop="50dp"
     android:background="@drawable/buttons"
     android:hint="Phone Number"
     android:inputType="number"
     android:padding="20dp"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:textColor="#14161C"
     android:textColorHint="#5C575E"
     android:textSize="17sp"
     android:textStyle="bold"/>

 <EditText
     android:id="@+id/login_password_input"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/login_phonenumber_input"
     android:layout_marginTop="6dp"
     android:background="@drawable/buttons"
     android:hint="password"
     android:inputType="textPassword"
     android:padding="20dp"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:textColor="#0C0D0E"
     android:textColorHint="#575559"
     android:textSize="17sp"
     android:textStyle="bold|normal"/>

 <LinearLayout
     android:id="@+id/linear_layout_1"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_below="@id/login_password_input"
     android:orientation="horizontal"

     >

  <TextView
      android:id="@+id/forget_password_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/login_password_input"
      android:layout_marginLeft="250dp"
      android:layout_marginTop="10dp"
      android:text="Forget Password"
      android:textColor="#0B0909"
      android:textSize="18dp"
      android:textStyle="bold" />


 </LinearLayout>


 <Button
     android:id="@+id/second_login_button"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/linear_layout_1"
     android:layout_centerHorizontal="true"
     android:layout_margin="23dp"
     android:background="@drawable/input_design"
     android:padding="14dp"
     android:text="Login"
     android:textColor="#DBDFDF"
     android:textSize="19sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/admin_panel_link"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="270dp"
     android:text="I'm an Admin"
     android:textColor="#0B0909"
     android:textSize="20dp"
     android:textStyle="bold"
     android:layout_below="@id/second_login_button"

     android:layout_marginTop="15dp"
     android:layout_alignParentEnd="true"
     android:layout_marginRight="20dp"
  />
 <TextView
     android:id="@+id/Users_panel_link"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="30dp"
     android:text="I'm not an Admin"
     android:textColor="#0B0909"
     android:textSize="20dp"
     android:textStyle="bold"
     android:layout_below="@id/second_login_button"
     android:visibility="invisible"
     android:layout_marginTop="15dp"
     android:layout_alignParentEnd="false"

  />

 <com.rey.material.widget.CheckBox
     android:id="@+id/CheckBox_Btn"
     style="@style/Material.Drawable.CheckBox"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/login_password_input"
     android:layout_marginStart="15dp"
     android:layout_marginTop="10dp"
     android:minHeight="48dp"
     android:text="Remember me"
     android:textSize="18dp"
     android:textStyle="bold"
     app:cbd_strokeColor="#B575D5" />
</RelativeLayout>